%h1 Listing dishes

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Price
      %th Photo
      %th Available
      %th
      %th
      %th

  %tbody
    - @dishes.each do |dish|
      %tr
        %td= dish.name
        %td= dish.description
        %td= dish.price
        %td= dish.photo
        %td= dish.available
        %td= link_to 'Show', dish
        %td= link_to 'Edit', edit_dish_path(dish)
        %td= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Dish', new_dish_path
