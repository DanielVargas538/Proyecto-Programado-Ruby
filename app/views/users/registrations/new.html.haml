= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload'

= render "users/shared/error_messages", resource: resource

%h1
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login' }) do |f|
  
  .h2 
    = t('application.sign_up')

  .form-group
    = f.label :name, class: "form-label required"
  .div.w-25
    = f.text_field :name, autofocus: true, class: "form-control"
  
  .form-group
    = f.label :role, class: "form-label required"
  .div.w-25
    = f.select(:role, options_for_select(roles, @user.role), {prompt: t('application.select')}, class: "form-control")

  .form-group
    = f.label :email, class: "form-label required"
  .div.w-25
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"

  .form-group
    = f.label :password, class: "form-label required"
    - if @minimum_password_length
      (#{@minimum_password_length} characters minimum)
  .div.w-25
    = f.password_field :password, autocomplete: "new-password", class: "form-control"

  .form-group
    = f.label :password_confirmation, class: "form-label required"
  .div.w-25
    = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"

  .actions
  .row.mt-4
    .col-3
      = button_tag "Sign up", type: "submit", class: "btn btn-danger btn-block btn-submit"
    .offset-5.col-3
      = render "users/shared/links"

